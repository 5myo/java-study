
public class TEST {

	public static void main(String[] args) {
		 Scanner scanner = new Scanner(System.in);

	      System.out.println("보 => 1 , 가위 => 2 , 바위 => 3 수중  숫자 하나를 입력하세요.");

	      

	      int num1 = Integer.parseInt(scanner.next());

	      int num2 = (int) (Math.random() * 3 + 1);

	      String result ="";

	      if(num1 == num2) {

	         result = " 비겼습니다.";

	      } else if (num1 > num2) {

	         result = "사용자가 이겼습니다.";

	      } else if (num1 < num2) {

	         result = "사용자가 졌습니다.";

	      } else {

	         result = "컴퓨터가 이겼습니다.";

	      }

	      System.out.println("  사용자가 낸 수는 " + num1 + "  컴퓨터가 낸 수는 " + num2  + " 결과는 " +result);

	}

}
